# Docker Compose Infrastructure Secrets & Config
# Copy this to .env (do not commit .env)

# === Postgres ===
POSTGRES_USER=flagpilot
POSTGRES_PASSWORD=flagpilot_secure_password
POSTGRES_DB=flagpilot

# === Redis ===
REDIS_PASSWORD=flagpilot_secure_redis

# === RAGFlow Stack Secrets ===
# MySQL
MYSQL_ROOT_PASSWORD=infinity_secure
MYSQL_USER=ragflow
MYSQL_PASSWORD=infinity_secure

# MinIO (S3)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin_secure

# RAGFlow Admin
RAGFLOW_ADMIN_EMAIL=admin@flagpilot.com
RAGFLOW_ADMIN_PASSWORD=flagpilot_secure_admin

# === Infrastructure Tuning ===
# Elasticsearch Heap (minimum 1GB for prod, 512m for dev)
ES_JAVA_OPTS=-Xms1g -Xmx1g
# RAGFlow Log Level
RAGFLOW_LOG_LEVEL=INFO
