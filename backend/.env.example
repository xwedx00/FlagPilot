# FlagPilot Backend Environment Variables v7.0
# =============================================

# ===========================================
# OpenRouter LLM (Required)
# ===========================================
OPENROUTER_API_KEY=sk-or-v1-your-api-key
OPENROUTER_MODEL=kwaipilot/kat-coder-pro:free
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-small

# ===========================================
# PostgreSQL (LangGraph Checkpoints + Auth)
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=flagpilot
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/flagpilot

# ===========================================
# Elasticsearch (Wisdom, Profiles, Chat Logs)
# ===========================================
ES_HOST=es01
ES_PORT=9200
ES_JAVA_OPTS=-Xms1g -Xmx1g
STACK_VERSION=9.2.3
MEM_LIMIT=4g

# ===========================================
# Qdrant (Vector Database for RAG)
# ===========================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=flagpilot_documents

# ===========================================
# MinIO (S3-Compatible File Storage)
# ===========================================
MINIO_USER=minioadmin
MINIO_PASSWORD=minioadmin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET=flagpilot-files

# ===========================================
# Redis (Caching + Rate Limiting)
# ===========================================
REDIS_PASSWORD=flagpilot_redis_2024
REDIS_PORT=6379

# ===========================================
# LangSmith (Observability - Optional)
# ===========================================
# LANGSMITH_API_KEY=lsv2_pt_your-api-key
# LANGSMITH_PROJECT=flagpilot

# ===========================================
# Application
# ===========================================
LOG_LEVEL=INFO
