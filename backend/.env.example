# =============================================================================
# FlagPilot Backend - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Required variables are marked with [REQUIRED]
# Optional variables have default values

# =============================================================================
# APP SETTINGS
# =============================================================================
LOG_LEVEL=INFO
SECRET_KEY=your-secure-secret-key-change-in-production  # [REQUIRED in production]

# =============================================================================
# LLM PROVIDER (OpenRouter)
# =============================================================================
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key  # [REQUIRED]
OPENROUTER_MODEL=kwaipilot/kat-coder-pro:free  # Or use: gpt-4o, claude-3-5-sonnet, etc
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# =============================================================================
# LANGSMITH OBSERVABILITY (Recommended for production)
# =============================================================================
# Get your API key at https://smith.langchain.com
LANGSMITH_API_KEY=lsv2_pt_your-langsmith-key  # [RECOMMENDED]
LANGSMITH_PROJECT=flagpilot
LANGSMITH_TRACING=true

# =============================================================================
# DATABASE - PostgreSQL (State Persistence)
# =============================================================================
# PostgreSQL connection for LangGraph Checkpointer (persistent state)
# Without this, state is lost on restart (falls back to MemorySaver)
DATABASE_URL=postgresql://user:password@localhost:5432/flagpilot  # [RECOMMENDED]

# =============================================================================
# CACHE - Redis
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# RAGFLOW (Document Search)
# =============================================================================
RAGFLOW_URL=http://ragflow:80
RAGFLOW_API_KEY=your-ragflow-api-key  # Optional

# =============================================================================
# ELASTICSEARCH (Memory System)
# =============================================================================
ES_HOST=es01
ES_PORT=9200
